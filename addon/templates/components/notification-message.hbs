<div class="message-icon">
  <span>
    {{messageIcon}}
  </span>
</div>
<div class="notification-content {{if clickable "clickable-message"}}" role="button" {{action "messageClicked"}}>
  <span class="message-text">
    {{!-- messageContent is escaped during component didInsertElement, because it also supports HTML content--}}
    {{#if message.htmlContent}}
      {{! template-lint-disable no-triple-curlies }}
      {{{message.message}}}
      {{! template-lint-enable no-triple-curlies }}
    {{else}}
      {{message.message}}
    {{/if}}
  </span>
</div>
<span class="close-icon" role="button" {{action "messageClosed"}}>
  {{closeIconHTML}}
</span>
{{#if animationDurationCss}}
  <div class="countdown"></div>
{{/if}}
